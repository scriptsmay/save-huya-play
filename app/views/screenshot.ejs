<h1>截图列表</h1>

<div class="row">
  <!-- 左侧菜单 -->
  <div class="col-md-3 mb-4">
    <div class="list-group">
      <% imageFiles.forEach(file => { %>
      <a
        href="/screenshot?file=<%= encodeURIComponent(file) %>"
        class="list-group-item list-group-item-action <%= selectedFileName === file ? 'active' : '' %>"
      >
        <%= file %>
      </a>
      <% }) %>
    </div>
  </div>

  <!-- 右侧内容 -->
  <div class="col-md-9">
    <% if (selectedFileName) { %>
    <div class="row mb-2">
      <h2 class="col-md-8">文件名: <%= selectedFileName %></h2>
      <div class="col-md-4">
        <a
          class="btn btn-danger float-end"
          href="/screenshot-delete?file=<%= selectedFileName %>"
          onclick="return confirm('确定要删除此文件吗？')"
          >删除</a
        >
      </div>
    </div>
    <div class="border rounded bg-light">
      <a
        target="_blank"
        href="/screenshot/<%= encodeURIComponent(selectedFileName) %>"
      >
        <img
          class="img-fluid"
          src="/screenshot/<%= encodeURIComponent(selectedFileName) %>"
          alt="<%= selectedFileName %>"
        />
      </a>
    </div>
    <% } else { %>
    <p class="text-muted">请从左侧选择一张图片查看。</p>
    <% } %>
  </div>
</div>
