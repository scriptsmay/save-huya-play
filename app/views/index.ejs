<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>回放列表</title>
  <!-- https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist -->
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
</head>
<body>
  <div class="container py-3">
    <h1 class="text-center">回放列表</h1>
    <!-- 搜索框 -->
    <div class="row mb-3">
      <div class="col-md-6 mx-auto">
        <form action="/" method="get" class="d-flex">
          <input type="text" 
                 name="search" 
                 class="form-control me-2" 
                 placeholder="搜索视频标题或作者..."
                 value="<%= searchTerm || '' %>">
          <button type="submit" class="btn btn-primary">搜索</button>
          <% if (searchTerm) { %>
            <a href="/" class="btn btn-outline-secondary ms-2">清除</a>
          <% } %>
        </form>
      </div>
    </div>

    <!-- 视频列表 -->
    <% if (videos.length === 0) { %>
      <div class="no-results">
        <h4>没有找到匹配的视频</h4>
        <% if (searchTerm) { %>
          <p>没有找到包含"<%= searchTerm %>"的视频</p>
        <% } else { %>
          <p>当前没有视频数据</p>
        <% } %>
      </div>
    <% } else { %>
      <div class="row row-cols-1 row-cols-md-5 g-4">
        <% videos.forEach(product => { %>
          <div class="col">
            <a target="_blank" href="<%= product.url %>" class="card h-100">
              <img src="<%= product.cover || 'https://via.placeholder.com/300' %>" 
                  class="card-img-top" 
                  alt="<%= product.title %>">
              <div class="card-body">
                <h5 class="card-title"><%= product.title %></h5>
                <div class="d-flex justify-content-between align-items-center">
                  <span class="badge bg-primary"><%= product.date %></span>
                  <strong><%= product.username %></strong>
                </div>
              </div>
              <p class="card-text-duration"><%= product.duration %></p>
            </a>
          </div>
        <% }); %>
      </div>
    <% } %>
    
    <!-- 分页控件 -->
    <% if (totalPages > 1) { %>
      <nav class="mt-5">
        <ul class="pagination justify-content-center">
          <% if (currentPage > 1) { %>
            <li class="page-item">
              <a class="page-link" 
                 href="/?page=<%= currentPage-1 %>&limit=<%= limit %><%= searchTerm ? '&search=' + encodeURIComponent(searchTerm) : '' %>">
                上一页
              </a>
            </li>
          <% } %>
          
          <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
              <a class="page-link" 
                 href="/?page=<%= i %>&limit=<%= limit %><%= searchTerm ? '&search=' + encodeURIComponent(searchTerm) : '' %>">
                <%= i %>
              </a>
            </li>
          <% } %>
          
          <% if (currentPage < totalPages) { %>
            <li class="page-item">
              <a class="page-link" 
                 href="/?page=<%= currentPage+1 %>&limit=<%= limit %><%= searchTerm ? '&search=' + encodeURIComponent(searchTerm) : '' %>">
                下一页
              </a>
            </li>
          <% } %>
        </ul>
      </nav>
    <% } %>
  </div>
  <!-- https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist -->
  <script src="/js/bootstrap.bundle.min.js"></script>
  <script src="/js/app.js"></script>
</body>
</html>